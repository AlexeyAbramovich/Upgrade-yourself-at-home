<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/TextViewStyleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/name_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        style="@style/EditTextStyleSettings"
        android:id="@+id/et_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/et_shape_settings"
        android:layout_marginTop="24dp"
        android:ems="7"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="@id/tv_user_name"
        tools:text="Алексей" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:src="@drawable/black_line"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/et_user_name"
        app:layout_constraintStart_toStartOf="@id/et_user_name"
        app:layout_constraintEnd_toEndOf="@id/et_user_name"/>

    <TextView
        android:id="@+id/tv_user_weight"
        style="@style/TextViewStyleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_s"
        app:layout_constraintStart_toStartOf="@id/et_user_weight"
        app:layout_constraintTop_toTopOf="@id/tv_user_name" />
    <EditText
        style="@style/EditTextStyleSettings"
        android:id="@+id/et_user_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/et_shape_settings"
        android:layout_marginEnd="12dp"
        android:ems="5"
        app:layout_constraintTop_toTopOf="@id/et_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="75" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:src="@drawable/black_line"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/et_user_weight"
        app:layout_constraintStart_toStartOf="@id/et_user_weight"
        app:layout_constraintEnd_toEndOf="@id/et_user_weight"/>

    <TextView
        android:id="@+id/tv_user_sex"
        style="@style/TextViewStyleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sex"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/et_user_name"
        app:layout_constraintTop_toBottomOf="@id/et_user_name"/>

    <Spinner
        android:id="@+id/spinner_sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingTop="12dp"
        android:paddingStart="8dp"
        android:paddingBottom="12dp"
        android:background="@drawable/et_shape_settings"
        android:entries="@array/sex"
        app:layout_constraintEnd_toEndOf="@id/et_user_name"
        app:layout_constraintStart_toStartOf="@id/et_user_name"
        app:layout_constraintTop_toBottomOf="@id/tv_user_sex"
        tools:ignore="RtlSymmetry" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"
        app:layout_constraintTop_toTopOf="@id/spinner_sex"
        app:layout_constraintEnd_toEndOf="@id/spinner_sex"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_user_height"
        style="@style/TextViewStyleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height_s"
        app:layout_constraintStart_toStartOf="@id/et_user_weight"
        app:layout_constraintTop_toTopOf="@id/tv_user_sex" />
    <EditText
        style="@style/EditTextStyleSettings"
        android:id="@+id/et_user_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/et_shape_settings"
        android:layout_marginEnd="12dp"
        android:ems="5"
        app:layout_constraintTop_toTopOf="@id/spinner_sex"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="176" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:src="@drawable/black_line"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/et_user_height"
        app:layout_constraintStart_toStartOf="@id/et_user_height"
        app:layout_constraintEnd_toEndOf="@id/et_user_height"/>
    <TextView
        android:id="@+id/tv_user_age"
        style="@style/TextViewStyleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/age_s"
        app:layout_constraintStart_toStartOf="@id/et_user_weight"
        app:layout_constraintTop_toBottomOf="@id/et_user_height" />
    <EditText
        style="@style/EditTextStyleSettings"
        android:id="@+id/et_user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/et_shape_settings"
        android:layout_marginEnd="12dp"
        android:ems="5"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_user_age"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="17" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:src="@drawable/black_line"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/et_user_age"
        app:layout_constraintStart_toStartOf="@id/et_user_age"
        app:layout_constraintEnd_toEndOf="@id/et_user_age"/>

    <TextView
        android:id="@+id/tv_rest_time"
        style="@style/TextViewStyleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rest_time"
        app:layout_constraintStart_toStartOf="@id/spinner_rest_time"
        app:layout_constraintTop_toTopOf="@id/tv_user_age"/>
    <Spinner
        android:id="@+id/spinner_rest_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingStart="8dp"
        android:paddingBottom="12dp"
        android:background="@drawable/et_shape_settings"
        android:entries="@array/res_time"
        app:layout_constraintEnd_toEndOf="@id/et_user_name"
        app:layout_constraintStart_toStartOf="@id/et_user_name"
        app:layout_constraintTop_toTopOf="@id/et_user_age"
        tools:ignore="RtlSymmetry" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"
        app:layout_constraintTop_toTopOf="@id/spinner_rest_time"
        app:layout_constraintEnd_toEndOf="@id/spinner_rest_time"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="12dp"/>

    <ImageButton
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="32dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_refresh_shape"
        android:src="@drawable/ic_baseline_refresh_48"/>

    <ImageButton
        android:id="@+id/button_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="32dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:background="@drawable/button_apply_shape"
        android:src="@drawable/ic_baseline_check_48"/>

</androidx.constraintlayout.widget.ConstraintLayout>